#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

#BASE   dc=example,dc=com
#URI    ldap://ldap.example.com ldap://ldap-master.example.com:666

#SIZELIMIT      12
#TIMELIMIT      15
#DEREF          never

# TLS certificates (needed for GnuTLS)
BASE  <%=node['nmd_openldap']['basedn']%>
<%if node.nmd_openldap.tls.enable == :exclusive%>
URI   ldaps://<%=node['nmd_openldap']['server']%>
<%else%>
URI   ldap://<%=node['nmd_openldap']['server']%>
<%end%>
TLS_CACERTDIR     <%=node.nmd_openldap.tls.cacert_path%>
